<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:screenOrientation="landscape"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="org.austinharmreduction.ahrcclientdata.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Needles In    "
        android:id="@+id/needlesin"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/InGroup"
        android:layout_below="@+id/needlesin"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/in1"
            android:id="@+id/in1"
            android:checked="false"
            android:onClick="onInButtonClicked"
            android:layout_below="@+id/needlesin"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/in2"
            android:id="@+id/in2"
            android:checked="false"
            android:onClick="onInButtonClicked"
            android:layout_below="@+id/in1"
            android:layout_alignParentLeft="true" />



        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/in3"
            android:id="@+id/in3"
            android:checked="false"
            android:onClick="onInButtonClicked"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/in2"
            android:layout_alignParentLeft="true" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/in4"
            android:id="@+id/in4"
            android:checked="false"
            android:onClick="onInButtonClicked"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/in3"
            android:layout_alignParentLeft="true" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/in5"
            android:id="@+id/in5"
            android:checked="false"
            android:onClick="onInButtonClicked"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/in4"
            android:layout_alignParentLeft="true" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/in6"
            android:id="@+id/in6"
            android:checked="false"
            android:onClick="onInButtonClicked"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/in5"
            android:layout_alignParentLeft="true" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/in7"
            android:id="@+id/in7"
            android:checked="false"
            android:onClick="onInButtonClicked"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/in6"
            android:layout_alignParentLeft="true" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/in8"
            android:id="@+id/in8"
            android:checked="false"
            android:onClick="onInButtonClicked"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/in7"
            android:layout_alignParentLeft="true" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/in9"
            android:id="@+id/in9"
            android:checked="false"
            android:onClick="onInButtonClicked"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/in8"
            android:layout_alignParentLeft="true" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/in10"
            android:id="@+id/in10"
            android:checked="false"
            android:onClick="onInButtonClicked"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/in9"
            android:layout_alignParentLeft="true"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/in11"
            android:id="@+id/in11"
            android:checked="false"
            android:onClick="onInButtonClicked"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/in10"
            android:layout_alignParentLeft="true"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/other"
            android:id="@+id/otherin"
            android:checked="false"
            android:onClick="onInButtonClicked"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/in11"
            android:layout_alignParentLeft="true"/>






    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Race           "
        android:id="@+id/Racetext"
        android:layout_alignTop="@+id/needlesout"
        android:layout_toRightOf="@+id/needlesout"
        android:layout_toEndOf="@+id/needlesout"
        android:layout_marginRight="30dp"/>

    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/RaceGroup"
        android:layout_below="@+id/Racetext"
        android:layout_toRightOf="@+id/needlesout"
        android:layout_toEndOf="@+id/needlesout"
        android:layout_marginRight="10dp">

        <RadioButton android:id="@+id/race1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/race1"
            android:onClick="onRaceButtonClicked"
            android:layout_below="@+id/Racetext"
            android:layout_centerHorizontal="true" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/race2"
            android:id="@+id/race2"
            android:checked="false"
            android:onClick="onRaceButtonClicked"
            android:layout_below="@+id/race1"
            android:layout_alignParentLeft="true" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/race3"
            android:id="@+id/race3"
            android:checked="false"
            android:onClick="onRaceButtonClicked"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/race2"
            android:layout_alignParentLeft="true" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/race4"
            android:id="@+id/race4"
            android:checked="false"
            android:onClick="onRaceButtonClicked"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/race3"
            android:layout_alignParentLeft="true" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/race5"
            android:id="@+id/race5"
            android:checked="false"
            android:onClick="onRaceButtonClicked"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/race4"
            android:layout_alignParentLeft="true" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/race6"
            android:id="@+id/race6"
            android:checked="false"
            android:onClick="onRaceButtonClicked"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/race5"
            android:layout_alignParentLeft="true" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/other"
            android:id="@+id/OtherRace"
            android:checked="false"
            android:onClick="onRaceButtonClicked"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/race6"
            android:layout_alignParentLeft="true" />
    </RadioGroup>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Needles Out       "
        android:id="@+id/needlesout"

        android:layout_alignTop="@+id/needlesin"
        android:layout_toRightOf="@+id/needlesin"
        android:layout_toEndOf="@+id/needlesin"
        android:layout_marginRight="10dp"/>

    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/OutGroup"
        android:layout_below="@+id/needlesout"
        android:layout_toRightOf="@+id/needlesin"
        android:layout_toEndOf="@+id/needlesin"
        android:layout_marginRight="10dp"
        >


        <RadioButton android:id="@+id/out1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/out1"
            android:onClick="onOutButtonClicked"
            android:layout_below="@+id/needlesout"
            android:layout_centerHorizontal="true" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/out2"
            android:id="@+id/out2"
            android:checked="false"
            android:onClick="onOutButtonClicked"
            android:layout_below="@+id/out1"
            android:layout_alignParentLeft="true" />



        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/out3"
            android:id="@+id/out3"
            android:checked="false"
            android:onClick="onOutButtonClicked"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/out2"
            android:layout_alignParentLeft="true" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/out4"
            android:id="@+id/out4"
            android:checked="false"
            android:onClick="onOutButtonClicked"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/out3"
            android:layout_alignParentLeft="true" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/out5"
            android:id="@+id/out5"
            android:checked="false"
            android:onClick="onOutButtonClicked"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/out4"
            android:layout_alignParentLeft="true" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/out6"
            android:id="@+id/out6"
            android:checked="false"
            android:onClick="onOutButtonClicked"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/out5"
            android:layout_alignParentLeft="true" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/out7"
            android:id="@+id/out7"
            android:checked="false"
            android:onClick="onOutButtonClicked"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/out6"
            android:layout_alignParentLeft="true" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/out8"
            android:id="@+id/out8"
            android:checked="false"
            android:onClick="onOutButtonClicked"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/out7"
            android:layout_alignParentLeft="true" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/out9"
            android:id="@+id/out9"
            android:checked="false"
            android:onClick="onOutButtonClicked"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/out8"
            android:layout_alignParentLeft="true" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/out10"
            android:id="@+id/out10"
            android:checked="false"
            android:onClick="onOutButtonClicked"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/out9"
            android:layout_alignParentLeft="true"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/out11"
            android:id="@+id/out11"
            android:checked="false"
            android:onClick="onOutButtonClicked"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/out10"
            android:layout_alignParentLeft="true"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/other"
            android:id="@+id/otherout"
            android:checked="false"
            android:onClick="onOutButtonClicked"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/out11"
            android:layout_alignParentLeft="true"/>
    </RadioGroup>




    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next screen"
        android:id="@+id/NextScreen"
        android:onClick="NextScreen"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back to Main Menu"
        android:id="@+id/mainmenu"
        android:onClick="mainmenu"
        android:layout_above="@+id/clearbuttons"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear all buttons"
        android:id="@+id/clearbuttons"
        android:onClick="clearbuttons"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
