<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:screenOrientation="landscape"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="org.austinharmreduction.ahrcclientdata.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Gender                  "
        android:id="@+id/gender"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/genderGroup"
        android:layout_below="@+id/gender">
        
        <RadioButton android:id="@+id/gen1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/gen1"
            android:onClick="OnGenderButtonClicked"
            android:layout_below="@+id/gender"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/gen2"
            android:id="@+id/gen2"
            android:checked="false"
            android:onClick="OnGenderButtonClicked"
            android:layout_below="@+id/gen1"
            android:layout_alignParentLeft="true" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/gen3"
            android:id="@+id/gen3"
            android:checked="false"
            android:onClick="OnGenderButtonClicked"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/gen2"
            android:layout_alignParentLeft="true" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/gen4"
            android:id="@+id/gen4"
            android:checked="false"
            android:onClick="OnGenderButtonClicked"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/gen3"
            android:layout_alignParentLeft="true" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/other"
            android:id="@+id/OtherGender"
            android:checked="false"
            android:onClick="OnGenderButtonClicked"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/gen6"
            android:layout_alignParentLeft="true" />
    </RadioGroup>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Race           "
        android:id="@+id/Racetext"
        android:layout_alignTop="@+id/gender"
        android:layout_toRightOf="@+id/gender"
        android:layout_toEndOf="@+id/gender"
        android:layout_marginRight="30dp"/>

    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/RaceGroup"
        android:layout_below="@+id/gender"
        android:layout_toRightOf="@+id/gender"
        android:layout_toEndOf="@+id/gender"
        android:layout_marginRight="30dp">

        <RadioButton android:id="@+id/race1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/race1"
            android:onClick="onRaceButtonClicked"
            android:layout_below="@+id/gender"
            android:layout_centerHorizontal="true" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/race2"
            android:id="@+id/race2"
            android:checked="false"
            android:onClick="onRaceButtonClicked"
            android:layout_below="@+id/race1"
            android:layout_alignParentLeft="true" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/race3"
            android:id="@+id/race3"
            android:checked="false"
            android:onClick="onRaceButtonClicked"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/race2"
            android:layout_alignParentLeft="true" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/race4"
            android:id="@+id/race4"
            android:checked="false"
            android:onClick="onRaceButtonClicked"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/race3"
            android:layout_alignParentLeft="true" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/race5"
            android:id="@+id/race5"
            android:checked="false"
            android:onClick="onRaceButtonClicked"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/race4"
            android:layout_alignParentLeft="true" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/race6"
            android:id="@+id/race6"
            android:checked="false"
            android:onClick="onRaceButtonClicked"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/race5"
            android:layout_alignParentLeft="true" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/other"
            android:id="@+id/OtherRace"
            android:checked="false"
            android:onClick="onRaceButtonClicked"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/race6"
            android:layout_alignParentLeft="true" />
    </RadioGroup>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Age"
        android:id="@+id/Agetext"
        android:layout_alignTop="@+id/Racetext"
        android:layout_toRightOf="@+id/Racetext"
        android:layout_toEndOf="@+id/Racetext"
        android:layout_marginRight="30dp"/>

    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/AgeGroup"
        android:layout_below="@+id/Racetext"
        android:layout_toRightOf="@+id/Racetext"
        android:layout_toEndOf="@+id/Racetext"
        android:layout_marginRight="30dp">

        <RadioButton android:id="@+id/age1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/age1"
            android:onClick="onAgeButtonClicked"
            android:layout_below="@+id/gender"
            android:layout_centerHorizontal="true" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/age2"
            android:id="@+id/age2"
            android:checked="false"
            android:onClick="onAgeButtonClicked"
            android:layout_below="@+id/age1"
            android:layout_alignParentLeft="true" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/age3"
            android:id="@+id/age3"
            android:checked="false"
            android:onClick="onAgeButtonClicked"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/age2"
            android:layout_alignParentLeft="true" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/age4"
            android:id="@+id/age4"
            android:checked="false"
            android:onClick="onAgeButtonClicked"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/age3"
            android:layout_alignParentLeft="true" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/age5"
            android:id="@+id/age5"
            android:checked="false"
            android:onClick="onAgeButtonClicked"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/age4"
            android:layout_alignParentLeft="true" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/age6"
            android:id="@+id/age6"
            android:checked="false"
            android:onClick="onAgeButtonClicked"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/age5"
            android:layout_alignParentLeft="true" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/age7"
            android:id="@+id/age7"
            android:checked="false"
            android:onClick="onAgeButtonClicked"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/age6"
            android:layout_alignParentLeft="true" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/age8"
            android:id="@+id/age8"
            android:checked="false"
            android:onClick="onAgeButtonClicked"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/age7"
            android:layout_alignParentLeft="true" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/age9"
            android:id="@+id/age9"
            android:checked="false"
            android:onClick="onAgeButtonClicked"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/age8"
            android:layout_alignParentLeft="true" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/age10"
            android:id="@+id/age10"
            android:checked="false"
            android:onClick="onAgeButtonClicked"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/age9"
            android:layout_alignParentLeft="true"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/age11"
            android:id="@+id/age11"
            android:checked="false"
            android:onClick="onAgeButtonClicked"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/age10"
            android:layout_alignParentLeft="true"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/age12"
            android:id="@+id/age12"
            android:checked="false"
            android:onClick="onAgeButtonClicked"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/age11"
            android:layout_alignParentLeft="true" />

    </RadioGroup>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next screen"
        android:id="@+id/NextScreen"
        android:onClick="NextScreen"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
